<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddQuestion"
    android:padding="16dp">

    <EditText
        android:id="@+id/question_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Enter the Question" />


    <EditText
        android:id="@+id/option1_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/question_editText"
        android:layout_marginTop="20dp"
        android:hint="Enter Option1" />


    <EditText
        android:id="@+id/option2_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/option1_editText"
        android:layout_marginTop="40dp"
        android:hint="Enter Option2" />

    <EditText
        android:id="@+id/option3_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/option2_editText"
        android:layout_marginTop="40dp"
        android:hint="Enter Option3" />

    <RadioGroup
        android:id="@+id/AnswerRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/question_editText">

        <RadioButton
            android:id="@+id/option1_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:freezesText="true"
            android:layout_marginTop="20dp"/>

        <RadioButton
            android:id="@+id/option2_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:freezesText="true"
            android:layout_marginTop="40dp"/>

        <RadioButton
            android:id="@+id/option3_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:freezesText="true"
            android:layout_marginTop="40dp"
            />

    </RadioGroup>

    <Spinner
        android:id="@+id/categorySelect_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_editText"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/difficultySelect_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categorySelect_spinner"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Add Question"
        android:id="@+id/qAdd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:layout_below="@+id/question_editText"/>


</RelativeLayout>